<?xml version="1.0"?>

<PropertyList>
	<fx>


		<crank>
			<name>engstart0</name>
			<mode>looped</mode>
			<path>Sounds/cranking.wav</path>
			<position>
				<x>-2.5</x>
				<y>0.0</y>
				<z>0.0</z>
			</position>
			<condition>
				<and>
					<greater-than>
						<property>rotors/left/rpm</property>
						<value>.5</value>
					</greater-than>
					<less-than>
						<property>rotors/left/rpm</property>
						<value>70</value>
					</less-than>
					<not>
						<property>sim/crashed</property>
					</not>
					<greater-than>
						<property>controls/engines/engine/magnetos</property>
						<value>0</value>
					</greater-than>
				</and>
			</condition>
			<volume>
				<offset>0.4</offset>
			</volume>
		</crank>

		<crank>
			<name>crank0</name>
			<mode>looped</mode>
			<path>Sounds/coughing.wav</path>
			<condition>
				<and>
					<greater-than>
						<property>rotors/left/rpm</property>
						<value>70</value>
					</greater-than>
					<less-than>
						<property>rotors/left/rpm</property>
						<value>100</value>
					</less-than>
					<not>
						<property>sim/crashed</property>
					</not>
					<greater-than>
						<property>controls/engines/engine/magnetos</property>
						<value>0</value>
					</greater-than>
				</and>
			</condition>
			<position>
				<x>-2.5</x>
				<y>0.0</y>
				<z>0.0</z>
			</position>
			<volume>
				<offset>0.5</offset>
			</volume>
		</crank>

		<engine>
			<name>engine</name>
			<mode>looped</mode>
			<path>Sounds/wasp.wav</path>
			<position>
				<x>-2.5</x>
				<y>0.0</y>
				<z>0.0</z>
			</position>
			<condition>
				<and>
					<greater-than>
						<property>rotors/left/rpm</property>
						<value>100</value>
					</greater-than>
					<not>
						<property>sim/crashed</property>
					</not>
				</and>
			</condition>
			<volume>
				<factor>0.5</factor>
			</volume>
			<pitch>
				<property>rotors/left/rpm</property>
				<factor>0.0025</factor>
				<min>0.1</min>
				<max>2.0</max>
				<offset>0.3</offset>
			</pitch>
		</engine>

		<rotor_left>
			<name>rotor_left</name>
			<mode>looped</mode>
			<path>Aircraft/Fw61/Sounds/heli.wav</path>
			<position>
				<x>-1.4</x>
				<y>4.5</y>
				<z>2.0</z>
			</position>
			<condition>
				<and>
					<greater-than>
						<property>rotors/left/rpm</property>
						<value>150</value>
					</greater-than>
					<not>
						<property>sim/crashed</property>
					</not>
				</and>
			</condition>
			<volume>
				<factor>.2</factor>
			</volume>
			<pitch>
				<property>rotors/left/rpm</property>
				<factor>0.1</factor>
				<max>10.0</max>
			</pitch>
		</rotor_left>

		<rotor_right>
			<name>rotor_right</name>
			<mode>looped</mode>
			<path>Aircraft/Fw61/Sounds/heli.wav</path>
			<position>
				<x>-1.4</x>
				<y>-4.5</y>
				<z>2.0</z>
			</position>
			<condition>
				<and>
					<greater-than>
						<property>rotors/right/rpm</property>
						<value>150</value>
					</greater-than>
					<not>
						<property>sim/crashed</property>
					</not>
				</and>
			</condition>
			<volume>
				<factor>.2</factor>
			</volume>
			<pitch>
				<property>rotors/left/rpm</property>
				<factor>0.1</factor>
				<max>10.0</max>
			</pitch>
		</rotor_right>

		<contact>
			<name>ground contact</name>
			<mode>transient</mode>
			<path>Sounds/helicopter-skid.wav</path>
			<condition>
				<or>
					<property>gear/gear[0]/wow</property>
					<property>gear/gear[1]/wow</property>
					<property>gear/gear[2]/wow</property>
					<property>gear/gear[3]/wow</property>
				</or>
			</condition>
			<volume>
				<factor>.5</factor>
			</volume>
			<pitch>
				<factor>2</factor>
			</pitch>
			<reference-dist>10.0</reference-dist>
			<max-dist>20.0</max-dist>
		</contact>

		<wind>
			<name>wind</name>
			<mode>looped</mode>
			<path>Sounds/wind-8khz.wav</path>
			<condition>
				<and>
					<property>velocities/airspeed-kt</property>
					<not>
						<property>sim/crashed</property>
					</not>
				</and>
			</condition>
			<volume>
				<property>position/altitude-ft</property>
				<factor>-0.000015</factor>
				<offset>1.0</offset>
				<min>0.1</min>
				<max>1.0</max>
			</volume>
			<volume>
				<property>velocities/airspeed-kt</property>
				<factor>0.0015</factor>
				<min>0.03</min>
				<max>0.25</max>
			</volume>
			<pitch>
				<property>velocities/airspeed-kt</property>
				<factor>0.01</factor>
				<offset>1.25</offset>
			</pitch>
			<reference-dist>10.0</reference-dist>
			<max-dist>20.0</max-dist>
		</wind>

		<crash>
			<name>intense ground contact</name>
			<mode>transient</mode>
			<path>Sounds/crash.wav</path>
			<property>sim/crashed</property>
			<volume>
				<factor>1</factor>
			</volume>
			<pitch>
				<factor>1.5</factor>
			</pitch>
		</crash>
	</fx>
</PropertyList>
